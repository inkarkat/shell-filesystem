#!/bin/bash
shopt -qs nullglob

printUsage()
{
    cat <<HELPTEXT
Print the number of files in each passed DIR (if it's not empty).
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" 'DIR [...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

typeset -a results=()
for dir
do
    files=("$dir"/*)

    if [ ${#files[@]} -gt 0 ]; then
	typeset -a subdirs=("$dir"/*/)

	fileCount=$((${#files[@]} - ${#subdirs[@]}))
	if [ $fileCount -gt 0 ]; then
	    name="$(basename -- "$dir")"
	    preposition='in'; [[ "$name" =~ ^[a-z]+$ ]] && preposition='to'
	    printf -v r '%d %s %s' "$fileCount" "$preposition" "$name"
	    results+=("$r")
	fi
    fi
done
exec joinBy ', ' "${results[@]}"
