#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Delete all empty directories (also recursively) inside the current directory /
passed DIR.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--] [DIR ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --)			shift;;
esac

exec find "$@" -type d -empty -delete
