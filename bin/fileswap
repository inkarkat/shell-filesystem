#!/bin/bash
# Source: https://unix.stackexchange.com/a/187552/18876

printUsage()
{
    cat <<HELPTEXT
Swap FILE1 and FILE2.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'FILE1 FILE2 [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -ne 2 ]; then
    printUsage "$0" >&2
    exit 2
fi

TMPFILE="$(TMPDIR="$(dirname -- "$1")" mktemp)" && \
    mv --force -- "$1" "$TMPFILE" && \
    mv --force -- "$2" "$1" && \
    mv --force -- "$TMPFILE" "$2"
