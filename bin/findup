#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Locate a FILE or matches for 'GLOB' in parent directories (up to the root
directory), and print its / their full path(s).
HELPTEXT
printf 'Usage: %q %s\n' "$(basename "$1")" "FILE|'GLOB' [, ...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0"
    exit 2
fi

oldWd=
while [ "$oldWd" != "$PWD" ]
do
    if ls "$@" >/dev/null 2>&1; then
	ls "$@" | sed -e "s+^+${PWD%/}/+"
    fi
    oldWd=$PWD
    cd .. || exit 3
done

exit 1
