#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Compare FILE with the original FILE.orig as a unified diff.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[DIFF-ARGS ...] FILE [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

typeset lastArg="${!#}"
exec diff -u "${@:1:$(($#-1))}" "$lastArg"{.orig,}
