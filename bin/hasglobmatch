#!/bin/bash
shopt -qs extglob nullglob dotglob

printUsage()
{
    cat <<HELPTEXT
Check whether the passed GLOB(s) matches any files.
HELPTEXT
printf 'Usage: %q %s\n' "$(basename "$1")" "'GLOB' [...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
[ $# -eq 1 ] || { printUsage "$0" >&2; exit 2; }

eval "typeset -a files=($*)"
# If globbing didn't yield anything, we've failed.
((${#files[@]})) || exit 1
# Still need to check for existing files; in case a GLOB without a wildcard was
# passed, it's not eliminated by nullglob.
for f in "${files[@]}"
do
    [ -e "$f" ] && exit 0
done
exit 1
