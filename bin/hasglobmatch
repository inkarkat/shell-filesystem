#!/bin/bash
shopt -qs extglob nullglob dotglob globstar

printShortUsage()
{
    # Note: short followed by long option; if the user knows the short one, she can
    # skim the long one.
    printf 'Usage: %q %s\n' "$(basename "$1")" "[-u|--unique] 'FILE-GLOB' [...] [-?|-h|--help]"
}
printUsage()
{
    # This is the short help when launched with no or incorrect arguments.
    # It is printed to stderr to avoid accidental processing.
    printShortUsage "$1" >&2
    printf >&2 '\nTry %q --help for more information.\n' "$(basename "$1")"
}
printLongUsage()
{
    # This is the long "man page" when launched with the help argument.
    # It is printed to stdout to allow paging with 'more'.
    cat <<HELPDESCRIPTION
Check whether the passed FILE-GLOB(s) matches any files.
HELPDESCRIPTION
    echo
    printShortUsage "$1"
    echo
    cat <<HELPTEXT
    --unique|-u		Only succeed if a single file matches the passed
			FILE-GLOB(s).
SEE ALSO:
- expandglob is hasglobmatch with printing all results.
- hasMatchingFile matches in passed dir(s) and can search the entire directory
  tree(s).
HELPTEXT
}

isUniqueMatch=
onMatch=succeed
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printLongUsage "$0"; exit 0;;
	--unique|-u)	shift; isUniqueMatch=t; onMatch=incrementMatchCount;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

succeed()
{
    exit 0
}

let matchCnt=0
incrementMatchCount()
{
    let matchCnt+=1
}

IFS=$'\n'
for arg
do
    # Handle tilde expansion.
    if [[ "$arg" =~ ^(\\?~)([^/]*)(.*) ]]; then
	if [ "${BASH_REMATCH[1]}" = '\~' ]; then
	    arg="~${BASH_REMATCH[2]}${BASH_REMATCH[3]}"
	elif [ -z "${BASH_REMATCH[2]}" ]; then
	    arg="${HOME}${BASH_REMATCH[3]}"
	else
	    arg="$(eval printf %s ~${BASH_REMATCH[2]})${BASH_REMATCH[3]}"
	fi
    fi

    [ -e "$arg" -o -h "$arg" ] && $onMatch

    # Still need to check for existing files; in case a FILE-GLOB without a
    # wildcard was passed, it's not eliminated by nullglob.
    # shellcheck disable=SC2206
    typeset -a files=($arg)
    for f in "${files[@]}"
    do
	[ -e "$f" -o  -h "$f" ] && $onMatch
    done
done
[ "$isUniqueMatch" ] && [ $matchCnt -eq 1 ] && exit 0
exit 1
